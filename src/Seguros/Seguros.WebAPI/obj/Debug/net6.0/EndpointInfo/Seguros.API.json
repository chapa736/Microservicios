  "components": {
    "schemas": {
      "CreateClienteDto": {
        "required": [
          "apMaterno",
          "apPaterno",
          "email",
          "nombre",
          "numeroIdentificacion",
          "telefono"
        ],
        "type": "object",
        "properties": {
          "numeroIdentificacion": {
            "maxLength": 10,
            "minLength": 10,
            "pattern": "^\\d{10}$",
            "type": "string"
          },
          "nombre": {
            "maxLength": 40,
            "minLength": 1,
            "pattern": "^[a-zA-ZáéíóúÁÉÍÓÚñÑ\\s]+$",
            "type": "string"
          },
          "apPaterno": {
            "maxLength": 40,
            "minLength": 1,
            "pattern": "^[a-zA-ZáéíóúÁÉÍÓÚñÑ\\s]+$",
            "type": "string"
          },
          "apMaterno": {
            "maxLength": 40,
            "minLength": 1,
            "pattern": "^[a-zA-ZáéíóúÁÉÍÓÚñÑ\\s]+$",
            "type": "string"
          },
          "telefono": {
            "maxLength": 20,
            "minLength": 1,
            "type": "string",
            "format": "tel"
          },
          "email": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "direccion": {
            "maxLength": 250,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreatePolizaDto": {
        "required": [
          "estatus",
          "fechaFin",
          "fechaInicio",
          "idCliente",
          "monto",
          "tipoPoliza"
        ],
        "type": "object",
        "properties": {
          "idCliente": {
            "type": "integer",
            "format": "int32"
          },
          "tipoPoliza": {
            "$ref": "#/components/schemas/TipoPoliza"
          },
          "fechaInicio": {
            "type": "string",
            "format": "date-time"
          },
          "fechaFin": {
            "type": "string",
            "format": "date-time"
          },
          "monto": {
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "estatus": {
            "$ref": "#/components/schemas/EstatusPoliza"
          }
        },
        "additionalProperties": false
      },
      "EstatusPoliza": {
        "enum": [
          1,
          2,
          3,
          4
        ],
        "type": "integer",
        "format": "int32"
      },
      "TipoPoliza": {
        "enum": [
          1,
          2,
          3,
          4
        ],
        "type": "integer",
        "format": "int32"
      },
      "UpdateClienteDto": {
        "type": "object",
        "properties": {
          "direccion": {
            "maxLength": 250,
            "type": "string",
            "nullable": true
          },
          "telefono": {
            "maxLength": 20,
            "type": "string",
            "format": "tel",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using the Bearer scheme. \\r\\n\\r\\n Enter 'Bearer' [space] and then your token in the text input below.\\r\\n\\r\\nExample: \\\"Bearer 1safsfsdfdfd\\\"",
        "name": "Authorization",
        "in": "header"
      }
    }
